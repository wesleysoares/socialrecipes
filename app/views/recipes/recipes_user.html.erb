<div class="row">
  <% if @user.recipes.any? %>
    <% @user.recipes.each do |recipe| %>
      <div class="col-sm-6 col-md-3">
        <div class="row">
          <div class="col-md-12">
            <div class="thumbnail">
              <%= image_tag recipe.image.url(:medium), {class: "img-thumbnail"}%>
                <div class="caption">
                  <h3><%=link_to recipe.name_recipe,recipe %></h3>
                  <dl>
                    <dt>Cozinha</dt>
                    <dd><%= recipe.kitchen.name %></dd>
                    <dt>Tipo de comida</dt>
                    <dd><%= recipe.type_food.name %></dd>
                    <dt>PreferÃªncia de comida</dt>
                    <dd><%= recipe.food_preference.name %></dd>
                  </dl>
                  <%= link_to 'Editar', edit_recipe_path(recipe), :method => :get, class: "btn btn-default navbar-btn" %> <%= link_to 'Excluir', recipe_path(recipe), :method => :delete,data: { confirm: 'Tem certeza que deseja excluir essa receita?' }, class: "btn btn-danger navbar-btn" %>
                </div>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-warning" role="alert">
      <p>Sem receitas cadastradas :(</p>
    </div>
  <% end %>
</div>
